<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F2F2">

    <TextView
        android:id="@+id/ngoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/alegreya_sc_bold"
        android:shadowColor="#423B3B"
        android:text="Ngomang"
        android:textColor="#C62828"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ngoname"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/buenard"
        android:text="Food Donation Campaign"
        android:textColor="#689F38"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/namelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventname"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"

        android:text="Name"
        android:textColor="#141212"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/RName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:width="300dp"
        android:layout_below="@+id/namelabel"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />
    <TextView
        android:id="@+id/unamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"

        android:text="UserName"
        android:textColor="#141212"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/RUName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unamelabel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:width="300dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />
    <TextView
        android:id="@+id/phonelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RUName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"

        android:text="PhoneNumber"
        android:textColor="#141212"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/RPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phonelabel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:width="300dp"
        android:background="@drawable/edittext_border"
        android:digits="0123456789"
        android:ems="10"
        android:hint="phone number"
        android:inputType="phone"
        android:maxLength="10"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />
    <TextView
        android:id="@+id/Emaillabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RPhone"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"

        android:text="Email"
        android:textColor="#141212"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/REmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Emaillabel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:width="300dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />
