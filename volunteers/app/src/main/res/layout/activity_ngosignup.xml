<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F2F2"
    tools:context=".ngosignup">

    <TextView
    android:id="@+id/namelabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="50dp"
    android:text="Name"
    android:textColor="#151414"
    android:textStyle="bold" />
    <EditText
        android:id="@+id/NSName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:width="300dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />
    <TextView
        android:id="@+id/unamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NSName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="UserName"
        android:textColor="#151414"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/NgoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unamelabel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:width="300dp"

        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Ngoname"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />
    <TextView
        android:id="@+id/phonelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NgoName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="PhoneNumber"
        android:textColor="#151414"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phonelabel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:width="300dp"
        android:background="@drawable/edittext_border"
        android:digits="0123456789"
        android:ems="10"
        android:hint="phone number"
        android:inputType="phone"
        android:maxLength="10"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />
    <TextView
        android:id="@+id/Emaillabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nPhone"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textColor="#141313"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Emaillabel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:width="300dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />

<!--    <EditText-->
<!--        android:id="@+id/nloc"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/nEmailAddress"-->
<!--        android:layout_marginLeft="50dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:width="300dp"-->
<!--        android:background="@drawable/edittext_border"-->
