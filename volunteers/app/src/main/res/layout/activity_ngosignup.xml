<!--        android:minHeight="48dp"-->
<!--        android:padding="10dp"-->
<!--        android:textColor="#2D2A2A"-->
<!--        android:textColorHint="#2D2A2A" />-->
    <TextView
        android:id="@+id/addresslabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nEmailAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Address"
        android:textColor="#151414"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/nAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addresslabel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:width="300dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textColor="#151414"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:width="300dp"

        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#2D2A2A"
        android:textColorHint="#2D2A2A" />

    <Button
        android:id="@+id/nregister"
        android:layout_width="267dp"
        android:layout_height="64dp"
        android:layout_below="@id/nPassword"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:text="Signup"
        android:textColor="#F4F0F0"
        app:backgroundTint="#D32F2F"
        app:cornerRadius="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nregister"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="44dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="already have a account?"
                android:textColor="#2D2A2A"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nsignupregister"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="signin"
                android:textColor="#C62828"
                android:textSize="17sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>